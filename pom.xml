<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.programmerare.shortest-paths</groupId>
	<artifactId>adapters-shortest-paths</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		  	
		<maven.compiler.source>1.6</maven.compiler.source>
		<maven.compiler.target>1.6</maven.compiler.target>
	</properties>
	
	<modules>
		<module>adapters-shortest-paths-core</module>
		
		<module>adapters-shortest-paths-impl-jgrapht</module> 	<!-- https://github.com/jgrapht/jgrapht -->
		<module>adapters-shortest-paths-impl-yanqi</module> 	<!-- https://github.com/yan-qi/k-shortest-paths-java-version -->
		<module>adapters-shortest-paths-impl-bsmock</module> 	<!-- https://github.com/bsmock/k-shortest-paths -->
		
		<module>adapters-shortest-paths-test</module>
	</modules>
 	 
	<repositories>
		<repository>
		<id>jitpack.io</id>
		<url>https://jitpack.io</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>com.programmerare.shortest-paths</groupId>
				<artifactId>adapters-shortest-paths-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<dependency>
				<groupId>com.programmerare.shortest-paths</groupId>
				<artifactId>adapters-shortest-paths-impl-jgrapht</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<dependency>
				<groupId>com.programmerare.shortest-paths</groupId>
				<artifactId>adapters-shortest-paths-impl-bsmock</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<dependency>
				<groupId>com.programmerare.shortest-paths</groupId>
				<artifactId>adapters-shortest-paths-impl-yanqi</artifactId>
				<version>${project.version}</version>			    
			</dependency>

			<!--  org.sqlite.JDBC -->		
			<dependency>
				<groupId>org.xerial</groupId>
				<artifactId>sqlite-jdbc</artifactId>
				<version>3.20.1</version>
			</dependency>
				
			<!--  org.hibernate.dialect.SQLiteDialect , https://github.com/gwenn/sqlite-dialect  -->
			<dependency>
				<groupId>com.github.gwenn</groupId>
				<artifactId>sqlite-dialect</artifactId>
				<version>d285e228514e4a70bb18bc3b0de9628f55ce9a43</version>
				<!--https://github.com/gwenn/sqlite-dialect/commit/ -->
			</dependency>
				
			<!-- includes the org.hibernate.jpa.HibernatePersistenceProvider specified in persistence.xml  -->
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate-core</artifactId>
				<version>5.2.12.Final</version>
			</dependency>
			
			<!--  types within the package javax.persistence  -->  
			<dependency>
				<groupId>org.hibernate.javax.persistence</groupId>
				<artifactId>hibernate-jpa-2.1-api</artifactId>
				<version>1.0.0.Final</version>
			</dependency>			
									
			<dependency>
				<groupId>org.hamcrest</groupId>
				<artifactId>hamcrest-core</artifactId>
				<version>1.3</version>
				<scope>test</scope>
			</dependency>
		
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.12</version>
				<scope>test</scope>
			</dependency>

		</dependencies>		
	</dependencyManagement>

</project>